CREATE TABLE IF NOT EXISTS Stocks
(
ID INTEGER PRIMARY,

stock_symbol varchar(4) NOT NULL,
stock_name varchar(20) NOT NULL,
stock_balance DOUBLE,
user_id TEXT,        
FOREIGN KEY (user_id) REFERENCES Users (ID)           
);

 