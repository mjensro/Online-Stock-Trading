CREATE TABLE IF NOT EXISTS Users
(
ID INTEGER PRIMARY KEY, 
first_name TEXT,
last_name TEXT,
user_name TEXT NOT NULL,
password TEXT,         
usd_balance DOUBLE NOT NULL
);

